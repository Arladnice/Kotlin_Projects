<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id = "@+id/mainLayout_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="100"
    tools:context=".MainActivity"
    >


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="20"
        android:gravity="center"
        android:weightSum="100"
        >

        <TextView
            android:id="@+id/textView14"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:text="@string/weather1"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_weight="50"
            android:gravity="center"
            tools:ignore="NestedWeights"
            />

        <TextView
            android:id="@+id/textView15"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:text="@string/saintp"
            android:gravity="center"
            android:textSize="15sp"
            android:layout_weight="25"/>

        <TextView
            android:id="@+id/textView16"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:text="@string/day"
            android:gravity="center"
            android:textSize="15sp"
            android:layout_weight="25"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="45"
        android:gravity="center"
        android:weightSum="100">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="55"
            android:clickable="true"
            android:contentDescription="@string/wicon"
            android:gravity="center"
            android:src="@mipmap/sunny"
            tools:ignore="NestedWeights"
            tools:srcCompat="@mipmap/sunny"
            android:focusable="true" />



        <TextView
            android:id="@+id/textView17"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="15"
            android:gravity="center"
            android:text="@string/_20_c"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView18"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="15"
            android:gravity="center"
            android:text="@string/sunny"
            android:textSize="25sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_weight="15"
        android:weightSum="100"
        android:baselineAligned="false">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="33"
            android:weightSum="100"
            android:gravity="center"
            android:orientation="vertical"
            tools:ignore="NestedWeights">

            <TextView
                android:id="@+id/textView19"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="25"
                android:gravity="center"
                android:text="@string/humidity"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="25"
                android:gravity="center"
                tools:srcCompat="@mipmap/humidity"
                android:contentDescription="@string/humiditycont"
                android:src="@mipmap/humidity"
                />

            <TextView
                android:id="@+id/textView20"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="25"
                android:gravity="center"
                android:text="@string/_60"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="33"
            android:weightSum="100"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView21"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="25"
                android:gravity="center"
                android:text="@string/cloud"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="25"
                android:gravity="center"
                tools:srcCompat="@mipmap/unnamed"
                android:contentDescription="@string/cloudss"
                android:src="@mipmap/unnamed"
                />

            <TextView
                android:id="@+id/textView22"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="25"
                android:gravity="center"
                android:text="@string/speed"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="33"
            android:weightSum="100"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView23"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="25"
                android:gravity="center"
                android:text="@string/feels"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="25"
                android:gravity="center"
                tools:srcCompat="@mipmap/bravo"
                android:src="@mipmap/bravo"
                android:contentDescription="@string/bravo" />

            <TextView
                android:id="@+id/textView24"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="25"
                android:gravity="center"
                android:text="@string/_16_c"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_weight="20"
        android:weightSum="100"
        android:baselineAligned="false">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="20"
            android:weightSum="100"
            android:gravity="center"
            android:orientation="vertical"
            tools:ignore="NestedWeights">

            <TextView
                android:id="@+id/textView33"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="25"
                android:gravity="center"
                android:text="@string/rain"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageView11"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="25"
                android:gravity="center"
                tools:srcCompat="@mipmap/weatheraa"
                android:src="@mipmap/weatheraa"
                android:contentDescription="@string/cloud" />

            <TextView
                android:id="@+id/textView34"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="25"
                android:gravity="center"
                android:text="@string/_1_pm"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="20"
            android:weightSum="100"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView31"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="25"
                android:gravity="center"
                android:text="@string/rain"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageView10"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="25"
                android:gravity="center"
                tools:srcCompat="@mipmap/weatheraa"
                android:src="@mipmap/weatheraa"
                android:contentDescription="@string/cloud"/>

            <TextView
                android:id="@+id/textView32"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="25"
                android:gravity="center"
                android:text="@string/_2_pm"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="20"
            android:weightSum="100"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView29"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="25"
                android:gravity="center"
                android:text="@string/cloudy"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="25"
                android:gravity="center"
                tools:srcCompat="@mipmap/cloudsss"
                android:src="@mipmap/cloudsss"
                android:contentDescription="@string/cloudsss" />

            <TextView
                android:id="@+id/textView30"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="25"
                android:gravity="center"
                android:text="@string/_3_pm"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="20"
            android:weightSum="100"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView27"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="25"
                android:gravity="center"
                android:text="@string/cloudy"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="25"
                android:gravity="center"
                tools:srcCompat="@mipmap/cloudsss"
                android:src="@mipmap/cloudsss"
                android:contentDescription="@string/cloudsss"/>

            <TextView
                android:id="@+id/textView28"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="25"
                android:gravity="center"
                android:text="@string/_4_pm"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="20"
            android:weightSum="100"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView25"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="25"
                android:gravity="center"
                android:text="@string/rain"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="25"
                android:gravity="center"
                tools:srcCompat="@mipmap/weatheraa"
                android:src="@mipmap/weatheraa"
                android:contentDescription="@string/cloud"/>

            <TextView
                android:id="@+id/textView26"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="25"
                android:gravity="center"
                android:text="@string/_5_pm"
                android:textStyle="bold" />

        </LinearLayout>


    </LinearLayout>


</LinearLayout>