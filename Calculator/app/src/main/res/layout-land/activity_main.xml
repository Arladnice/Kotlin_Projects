<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gray"
        android:ems="10"
        android:gravity="right|center"
        android:inputType="textPersonName"
        android:text="0"
        android:textSize="30pt" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_width="match_parent"
            android:layout_marginBottom="3dp">

            <Button
                android:id="@+id/button7"
                android:layout_width="40pt"
                android:layout_height="15pt"
                android:layout_marginRight="2pt"
                android:layout_weight="1"
                android:background="@color/blueback"
                android:onClick="numberEvent"
                android:text="7"></Button>

            <Button
                android:id="@+id/button8"
                android:layout_width="40pt"
                android:layout_height="15pt"
                android:layout_marginRight="2pt"
                android:layout_weight="1"
                android:background="@color/blueback"
                android:onClick="numberEvent"
                android:text="8"></Button>

            <Button
                android:id="@+id/button9"
                android:layout_width="40pt"
                android:layout_height="15pt"
                android:layout_marginRight="2pt"
                android:layout_weight="1"
                android:background="@color/blueback"
                android:onClick="numberEvent"
                android:text="9"></Button>

            <Button
                android:id="@+id/buttonPercent"
                android:layout_width="40pt"
                android:layout_height="15pt"
                android:layout_weight="1"
                android:background="@color/colorAccent"
                android:onClick="operatorEvent"
                android:text="%"></Button>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="3dp">

            <Button
                android:id="@+id/button4"
                android:layout_width="40pt"
                android:layout_height="15pt"
                android:layout_marginRight="2pt"
                android:layout_weight="1"
                android:background="@color/blueback"
                android:onClick="numberEvent"
                android:text="4"></Button>

            <Button
                android:id="@+id/button5"
                android:layout_width="40pt"
                android:layout_height="15pt"
                android:layout_marginRight="2pt"
                android:layout_weight="1"
                android:background="@color/blueback"
                android:onClick="numberEvent"
                android:text="5"></Button>

            <Button
                android:id="@+id/button6"
                android:layout_width="40pt"
                android:layout_height="15pt"
                android:layout_marginRight="2pt"
                android:layout_weight="1"
                android:background="@color/blueback"
                android:onClick="numberEvent"
                android:text="6"></Button>

            <Button
                android:id="@+id/buttonMultiply"
                android:layout_width="40pt"
                android:layout_height="15pt"
                android:layout_weight="1"
                android:background="@color/colorAccent"
                android:onClick="operatorEvent"
                android:text="*"></Button>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="3dp">

            <Button
                android:id="@+id/button1"
                android:layout_width="40pt"
                android:layout_height="15pt"
                android:layout_marginRight="2pt"
                android:layout_weight="1"
                android:background="@color/blueback"
                android:onClick="numberEvent"
                android:text="1"></Button>

            <Button
                android:id="@+id/button2"
                android:layout_width="40pt"
                android:layout_height="15pt"
                android:layout_marginRight="2pt"
                android:layout_weight="1"
                android:background="@color/blueback"
                android:onClick="numberEvent"
                android:text="2"></Button>

            <Button
                android:id="@+id/button3"
                android:layout_width="40pt"
                android:layout_height="15pt"
                android:layout_marginRight="2pt"
                android:layout_weight="1"
                android:background="@color/blueback"
                android:onClick="numberEvent"
                android:text="3"></Button>

            <Button
                android:id="@+id/buttonMinus"
                android:layout_width="40pt"
                android:layout_height="15pt"
                android:layout_weight="1"
                android:background="@color/colorAccent"
                android:onClick="operatorEvent"
                android:text="-"></Button>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="3dp">

            <Button
                android:id="@+id/buttonComma"
                android:layout_width="40pt"
                android:layout_height="15pt"
                android:layout_marginRight="2pt"
                android:layout_weight="1"
                android:background="@color/blueback"
                android:onClick="numberEvent"
                android:text=","></Button>

            <Button
                android:id="@+id/button0"
                android:layout_width="40pt"
                android:layout_height="15pt"
                android:layout_marginRight="2pt"
                android:layout_weight="1"
                android:background="@color/blueback"
                android:onClick="numberEvent"
                android:text="0"></Button>

            <Button
                android:id="@+id/buttonPlusMinus"
                android:layout_width="40pt"
                android:layout_height="15pt"
                android:layout_marginRight="2pt"
                android:layout_weight="1"
                android:background="@color/colorAccent"
                android:onClick="numberEvent"
                android:text="+/-"></Button>

            <Button
                android:id="@+id/buttonPlus"
                android:layout_width="40pt"
                android:layout_height="15pt"
                android:layout_weight="1"
                android:background="@color/colorAccent"
                android:onClick="operatorEvent"
                android:text="+"></Button>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/buttonDEL"
                android:layout_width="40pt"
                android:layout_height="40pt"
                android:layout_weight="1"
                android:background="@color/equal"
                android:onClick="delEvent"
                android:text="DEL"></Button>

            <Button
                android:id="@+id/buttonEqual"
                android:layout_width="40pt"
                android:layout_height="40pt"
                android:layout_weight="1"
                android:background="@color/equal"
                android:onClick="equalEvent"
                android:text="="></Button>
        </TableRow>
    </TableLayout>
</LinearLayout>