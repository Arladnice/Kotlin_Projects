<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    >


    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_weight="1"
        android:background="@color/gray"
        android:inputType="textPersonName"
        android:textSize="40pt"
        android:gravity="right|center"
        android:text="0"
        />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="3dp">
            <Button
                android:id="@+id/button7"
                android:layout_weight="1"
                android:layout_marginRight="2pt"
                android:layout_width="40pt"
                android:onClick="numberEvent"
                android:layout_height="40pt" android:text="7"
                android:background="@color/blueback"></Button>
            <Button
                android:id="@+id/button8"
                android:layout_weight="1"
                android:layout_marginRight="2pt"
                android:layout_width="40pt"
                android:onClick="numberEvent"
                android:layout_height="40pt" android:text="8"
                android:background="@color/blueback"></Button>
            <Button
                android:id="@+id/button9"
                android:layout_weight="1"
                android:layout_marginRight="2pt"
                android:layout_width="40pt"
                android:onClick="numberEvent"
                android:layout_height="40pt" android:text="9"
                android:background="@color/blueback"></Button>
            <Button
                android:id="@+id/buttonPercent"
                android:layout_weight="1"
                android:layout_width="40pt"
                android:onClick="operatorEvent"
                android:layout_height="40pt" android:text="%"
                android:background="@color/colorAccent"></Button>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="3dp">
            <Button
                android:id="@+id/button4"
                android:layout_weight="1"
                android:layout_marginRight="2pt"
                android:layout_width="40pt"
                android:onClick="numberEvent"
                android:layout_height="40pt" android:text="4"
                android:background="@color/blueback"></Button>
            <Button
                android:id="@+id/button5"
                android:layout_weight="1"
                android:layout_marginRight="2pt"
                android:layout_width="40pt"
                android:onClick="numberEvent"
                android:layout_height="40pt" android:text="5"
                android:background="@color/blueback"></Button>
            <Button
                android:id="@+id/button6"
                android:layout_weight="1"
                android:layout_marginRight="2pt"
                android:layout_width="40pt"
                android:onClick="numberEvent"
                android:layout_height="40pt" android:text="6"
                android:background="@color/blueback"></Button>
            <Button
                android:id="@+id/buttonMultiply"
                android:layout_weight="1"
                android:layout_width="40pt"
                android:onClick="operatorEvent"
                android:layout_height="40pt" android:text="*"
                android:background="@color/colorAccent"></Button>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="3dp">
            <Button
                android:id="@+id/button1"
                android:layout_weight="1"
                android:layout_marginRight="2pt"
                android:layout_width="40pt"
                android:onClick="numberEvent"
                android:layout_height="40pt" android:text="1"
                android:background="@color/blueback"></Button>
            <Button
                android:id="@+id/button2"
                android:layout_weight="1"
                android:layout_marginRight="2pt"
                android:layout_width="40pt"
                android:onClick="numberEvent"
                android:layout_height="40pt" android:text="2"
                android:background="@color/blueback"></Button>
            <Button
                android:id="@+id/button3"
                android:layout_weight="1"
                android:layout_marginRight="2pt"
                android:layout_width="40pt"
                android:onClick="numberEvent"
                android:layout_height="40pt" android:text="3"
                android:background="@color/blueback"></Button>
            <Button
                android:id="@+id/buttonMinus"
                android:layout_weight="1"
                android:layout_width="40pt"
                android:onClick="operatorEvent"
                android:layout_height="40pt" android:text="-"
                android:background="@color/colorAccent"></Button>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="3dp">
            <Button
                android:id="@+id/buttonComma"
                android:layout_weight="1"
                android:layout_marginRight="2pt"
                android:layout_width="40pt"
                android:onClick="numberEvent"
                android:layout_height="40pt" android:text=","
                android:background="@color/blueback"></Button>
            <Button
                android:id="@+id/button0"
                android:layout_weight="1"
                android:layout_marginRight="2pt"
                android:layout_width="40pt"
                android:onClick="numberEvent"
                android:layout_height="40pt" android:text="0"
                android:background="@color/blueback"></Button>
            <Button
                android:id="@+id/buttonPlusMinus"
                android:layout_weight="1"
                android:layout_marginRight="2pt"
                android:layout_width="40pt"
                android:onClick="numberEvent"
                android:layout_height="40pt" android:text="+/-"
                android:background="@color/colorAccent"></Button>
            <Button
                android:id="@+id/buttonPlus"
                android:layout_weight="1"
                android:layout_width="40pt"
                android:onClick="operatorEvent"
                android:layout_height="40pt" android:text="+"
                android:background="@color/colorAccent"></Button>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/buttonDEL"
                android:layout_weight="1"
                android:layout_width="40pt"
                android:onClick="delEvent"
                android:layout_height="40pt" android:text="DEL"
                android:background="@color/equal"></Button>
            <Button
                android:id="@+id/buttonEqual"
                android:layout_weight="1"
                android:layout_width="40pt"
                android:onClick="equalEvent"
                android:layout_height="40pt" android:text="="
                android:background="@color/equal"></Button>
        </TableRow>
    </TableLayout>
</LinearLayout>